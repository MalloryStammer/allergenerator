@using allergenerator.ViewModels;
@model AddFoodViewModel;

<div id="wrapper">
    <div class="overlay"></div>

    <!-- Sidebar -->
    <nav class="navbar navbar-inverse fixed-top" id="sidebar-wrapper" role="navigation">
        <ul class="nav sidebar-nav">
            <div class="sidebar-header">
                <div class="sidebar-brand">
                    <a asp-controller="Home" asp-action="Index">Allergenerator</a>

                </div>
            </div>
            <li><a id="#generate" asp-controller="Generator" asp-action="index">Generate a list!</a></li>
            <li><a id="#learn" asp-controller="Sensitivity" asp-action="learn">Learn</a></li>
            <li><a id="#faq" asp-controller="Home" asp-action="faq">FAQ</a></li>
            <li><a id="#about" asp-controller="Home" asp-action="About">About Us</a></li>
            <li><a id="#contact" asp-controller="Home" asp-action="Contact">Contact Us</a></li>

        </ul>
    </nav>
    <!-- /#sidebar-wrapper -->
    <div id="page-content-wrapper">
        <button type="button" class="hamburger animated fadeInLeft is-closed" data-toggle="offcanvas">
            <span class="hamb-top"></span>
            <span class="hamb-middle"></span>
            <span class="hamb-bottom"></span>
        </button>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">


                    <!-- Page Content -->

                    <h1>Add a Food</h1>

                    <form asp-controller="Home" asp-action="ProcessAddFoodForm" method="post">
                        <div class="form-group">
                            <label asp-for="Name">Food Name</label>
                            <input autocomplete="off" asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CategoryId">Category: </label>
                            <select asp-for="CategoryId" asp-items="@Model.Categories"></select>
                            <br />
                        </div>
                        <div class="form-group">
                            @foreach (Sensitivity sensitivity in Model.Sensitivities)
                            {
                                <input type="checkbox" name="selectedSensitivities" value="@sensitivity.Id" /><label asp-for="@sensitivity.Id">@sensitivity.Name</label>
                                }
                        </div>
                        <br />
                        <input type="submit" value="Add Food" />
                    </form>
                    <br />

                    <a asp-controller="Category" asp-action="Add">Add New Category</a>
                    <br />
                    <a asp-controller="Sensitivity" asp-action="Add">Add New Sensitivity</a>




                    <!-- Page Content -->


                </div>
            </div>
        </div>
    </div>
    <!-- /#page-content-wrapper -->

</div>