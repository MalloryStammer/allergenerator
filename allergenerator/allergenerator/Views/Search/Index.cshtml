<head>

</head>



<div id="page-content-wrapper" style=" padding: 70px 70px 70px 220px">
    <!-- Page Content -->

    <div class="container body-content">

        <h1>@ViewBag.title</h1>

        <form action="/search/results" method="post">
            <h2>Search by:</h2>

            <p>
                @foreach (var column in ViewBag.columns)
                {
                    <span>
                        <input type="radio" name="searchType" id="@column.Key" value="@column.Key" checked="@column.Key == 'all'" />
                        <label for="@column.Key">@column.Value</label>
                    </span>
                }

            </p>

            <p>
                <label for="searchTerm">Keyword:</label>
                <input type="text" name="searchTerm" id="searchTerm" />
            </p>

            <input type="submit" value="Search" />
        </form>

        <hr />

        @if (ViewBag.foods != null)
        {
            <table>
                @foreach (var food in ViewBag.foods)
                {
                    <tr>
                        <td>
                            <p>ID: @food.FoodId</p>
                            <p>Name: @food.Name</p>
                            <p>Category: @food.CategoryName</p>
                            <p>Sensitivity: @food.SensitivityText</p>
                        </td>
                    </tr>
                }
            </table>
        }


    </div>


    <!-- Page Content -->

    </div>
<!-- /#page-content-wrapper -->
